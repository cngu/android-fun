<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cngu.androidfun" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/DemoTheme" >
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demo.activitytransition.SourceTransitionActivity"
            android:label="@string/title_activity_source_transition"
            android:theme="@style/TransitionTheme"
            android:parentActivityName=".main.MainActivity">
        </activity>
        <activity
            android:name=".demo.activitytransition.TargetTransitionActivity"
            android:label="@string/title_activity_target_transition"
            android:theme="@style/TransitionTheme"
            android:parentActivityName=".demo.activitytransition.SourceTransitionActivity">
        </activity>
    </application>

</manifest>
